<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="css/materialize.css">
  <link href="https://fonts.googleapis.com/css?family=Della+Respira|Josefin+Slab" rel="stylesheet">
  <link rel="stylesheet" href="css/styles.css">
 <!--  Scripts-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="js/materialize.min.js"></script>
  <title></title>
</head>


<body>
  <% include ./partials/navigation %>
    <!-- Section #1-->
    <!-- SEARCH FORM-->
    <div class="row">

      <form class="col m6">
        <div class="row">
          <div class="input-field col m6">
            <input placeholder="Enter Desired Event Location" name="search" id="search" type="text" class="validate" required>
            <button id="submitSearch" class="btn waves-effect waves-light" type="submit" name="action">submit</button>
          </div>
        </div>
      </form>
    </div>

    <div class="row">
      <!-- GOOGLE EVENTS MAP -->
      <div class="col s12 m6 l6">
        <div id="map"></div>
      </div>

      <div class="col s12 m6 l6">
        <div id="table-scroll">
          <!-- EVENTS TABLE -->
          <table class="bordered">
            <thead>
              <tr>
                <th data-field="Name">Name</th>
                <th data-field="Location">Location</th>
                <th data-field="Date">Date</th>
              </tr>
            </thead>

            <tbody id="eventData">
            </tbody>
          </table>

     <!-- MODAL -->
                <div id="modal1" class="modal modal-fixed-footer">
                    <div class="modal-content">
                        <h4 id="modalHeader"></h4>
                        <div id="modalText"></div>
                    </div>
                    <div class="modal-footer">
                        <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">OK</a>
                    </div>
                </div>
        </div>
      </div>
    </div>
  
    <script src="js/displayApiInfo.js"></script>
     <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_7BXyG5H9Br9yYAQ04R6HBCUgjDlDPG4&callback=initMap"> </script>
    <script src="js/moment.js"></script>
    
</body>

</html>